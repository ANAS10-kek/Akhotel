@model PFM.Models.ApplicationUser
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Mange Account";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}
<div class="col-lg-12 px-0 mx-0 py-3">
    <h3>General Account Settings</h3>
    <hr />
    <ul class="list-group col-lg-12 p-0 m-0">
        <li class="list-group-item py-3 px-lg-2 px-x d-flex justify-content-between align-items-center" style="background-color: #e8e7e3;">
            <span class="pl-1 font-weight-bold col">Username</span>
            <span class="col text-center d-lg-block d-md-block d-sm-none d-none">@Html.DisplayFor(m => m.UserName)</span>
            <span class="col text-right p-0">@Html.ActionLink("Edit", "editUsername", "Manage")</span>
        </li>
        <li class="list-group-item py-3 px-lg-2 px-x d-flex justify-content-between align-items-center" style="background-color: #e8e7e3;">
            <span class="pl-1 font-weight-bold col">Phone Number</span>
            @if (Model.PhoneNumber == null)
            {
                <span class="col text-center text-danger"><i class="fas fa-exclamation-circle pl-3"></i>
                </span>
            }
            else
            {
                <span class="col text-center d-lg-block d-md-block d-sm-none d-none text-dark">
                    @Html.DisplayFor(m => m.PhoneNumber)
                </span>
            }
            <span class="col text-right p-0">@Html.ActionLink("Edit", "editPhoneNumber", "Manage")</span>
        </li>
        <li class="list-group-item py-3 px-lg-2 px-x d-flex justify-content-between" style="background-color: #e8e7e3;">
            <span class="pl-1 font-weight-bold col">Email</span>
            @if (Model.Email == null)
            {
                <span class="col text-center text-danger">
                    <i class="fas fa-exclamation-circle "></i>
                </span>
            }
            else
            {
                <span class="col d-lg-block d-md-block d-sm-none d-none text-center text-dark">
                    @Html.DisplayFor(m => m.Email)
                </span>
            }
            <span class="col text-right p-0">@Html.ActionLink("Edit", "editEmail", "Manage")</span>
        </li>
        <li class="list-group-item py-3 px-lg-2 px-x d-flex  align-items-center" style="background-color: #e8e7e3;">
            <span class="pl-1 font-weight-bold   col-lg-5 col-md-5 col-sm-5 col">Email Confirmation </span>
            @if (!Model.EmailConfirmed)
            {
                <span class="text-danger text-center m-0 p-0 col-lg-7 d-flex justify-content-center">
                    You need To confirm your email for our newsletter<i class="fas fa-exclamation-circle pl-5"></i>
                </span>
            }
            else
            {
                <span class="text-center d-flex justify-content-center">
                    Your email is confirmed
                </span>
            }
        </li>
        <li class="list-group-item py-3 px-lg-2 px-x d-flex justify-content-between align-items-center" style="background-color: #e8e7e3;">
            <span class="pl-1 font-weight-bold col">Other informations</span>
            @if (Model.City == null || Model.Country == null || Model.State == null || Model.Address == null)
            {
                <span class="col text-center text-danger"><i class="fas fa-exclamation-circle "></i></span>
            }
            else
            {
                <span class="col text-center d-lg-block d-md-block d-sm-none d-none">Your Address,country,City..</span>
            }
            <span class="col text-right p-0">@Html.ActionLink("Edit", "SetotherInfo", "Manage")</span>
        </li>
        <a href='@Url.Action("RemoveAccount","Manage")' class="list-group-item py-3 px-2  d-flex justify-content-center align-items-center bg-danger btn font-weight-bold" style="color: #e8e7e3;">
            Remove Account<i class="fas fa-user-times pl-4"></i>
        </a>

    </ul>
</div>

