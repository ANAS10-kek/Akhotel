@model IEnumerable<PFM.Models.ModelsReservation.Reservation>

@{
    ViewBag.Title = "Manage reservation";
    Layout = "~/Views/Shared/_administrationLayout.cshtml";
}

<style>
    tr {
        text-align: center;
    }
    #tableRoles {
        border: 1px;
        width: 100% !important;
    }
</style>
<div class="card mb-4">
    <div style="font-size:1.3rem;vertical-align:middle" class="card-header font-weight-bold d-flex justify-content-between align-items-center">List Reservations<a class=" btn btn-primary ml-auto" href='@Url.Action("ReservationList")'><i class="fas fa-sync-alt"></i></a></div>
    <div class="card-body py-3">
        <div class="pl-1 py-1 pr-2 overflow-auto">
            <table class="table table-striped my-5 table-responsive  table-bordered" id="tableRoles">
                <thead>
                    <tr class="">
                        <th>
                            @Html.DisplayNameFor(model => model.Room.Titre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateDebut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateFin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Confirmation)
                        </th>
                        <th>
                            Nb persons
                        </th>
                        <th>
                          nb chambres
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room.Titre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                              @item.DateDebut.ToShortDateString()
                            </td>
                            <td>
                                @item.DateFin.ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Confirmation,new { @class = "form-control" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NbPers)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NbChambres)
                            </td>
                            <td style="font-size:1.3rem">
                                <div class="d-flex justify-content-center">
                                    <a role="button" class="px-2 btn" href='@Url.Action("DetailsReservation", new { id = item.ReservationId })'><i class="fas fa-edit"></i></a> 
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>