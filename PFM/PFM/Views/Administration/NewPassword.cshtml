@model PFM.Models.ChangePasswordViewModel
@using (Html.BeginForm("NewPassword", "Administration", new { @class = "myform" }))
{
    <div class="col-lg-12  px-0 pb-2">
        <label class="labelinput">New password</label>
        <div class="col-lg-12 m-0 p-0 divi">

            @Html.AntiForgeryToken()
            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control txtnewpass" } })
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-lg-12 pb-2 px-0 py-2">
        <div class="col-md-offset-2 col-lg-12 p-0 m-0 d-flex justify-content-end">
            <input type="submit" value="Save" class="btn btn-success ml-auto" id="sbmtNewpass" />
        </div>
    </div>


}
