@model IEnumerable<PFM.Models.ModelsReservation.Room>

@{
    ViewBag.Title = "List des rooms";
    Layout = "~/Views/Shared/_administrationLayout.cshtml";

}

<h2>roomList</h2>

<p>
    @Html.ActionLink("Ajouter une chambre", "Create")
</p>

<div class="card mb-4">
    <div style="font-size:1.3rem" class="card-header font-weight-bold d-flex justify-content-between align-items-center"><i class="fas fa-table mr-1"></i>List clients <a class=" btn btn-primary ml-auto" href='@Url.Action("RoomList")'><i class="fas fa-sync-alt"></i></a></div>
    <div class="card-body">
        <div class="pl-1 py-1 pr-2 overflow-auto">
            <table class="table table-bordered" id="tableRooms"  >
                <thead>
                    <tr>
                        <th class="d-none">
                            id
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prix)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TypeDeLit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Disponibilité)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NbChambres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShortDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LongDescription)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="d-none" id="tdId">
                            @Html.DisplayFor(modelItem => item.ChambreId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prix)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeDeLit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Disponibilité)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NbChambres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LongDescription)
                        </td>
                        <td style="font-size:1.3rem">
                            <div class="d-flex justify-content-center">
                                <a role="button" class="pr-2" href='@Url.Action("Details", new { id = item.ChambreId })'><i class="fas fa-edit"></i></a> |
                                <a role="button" class="pl-2 text-danger btn btn-block  btndelete custom-control"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

            </div>
        </div>
 </div>





