
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AK Hotel</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Long+Cang&display=swap" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/style_eat_offers.css" rel="stylesheet" />
    <link rel="stylesheet" media="(max-width:600px)" href="~/Content/mobile.css">
    <script src="https://kit.fontawesome.com/2d05dd57ce.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <link href="~/Content/StylePageInscription.css" rel="stylesheet" />
    <link href="~/Content/StylePageLogin.css" rel="stylesheet" />
    <style>
        .div-form input {
            color: #403866;
            font-size: 18px;
            display: block;
            width: 100%;
            background: transparent;
            height: 40px;
            padding: 0 10px 0 38px;
            outline: none;
            border: none;
        }

        .btnback {
            background-color: #9cd9ee !important;
            color: white;
            font-size: 1.5rem;
            justify-self: center;
            letter-spacing: 1px !important;
        }

        .adressSpan {
            font-size: small !important;
        }

        .current {
            background-color: #9cd9ee !important;
        }

        .menuRight {
            height: 400px;
        }

        @@media (max-width:960px) {
            .menuRight {
                height: max-content;
            }


            .tit {
                padding: 0 !important;
            }

            h3, h4, h2 {
                font-size: 1.1rem;
            }

            #formRegister span {
                display: none;
            }
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark py-2" style="background-color:#000000 !important" id="my_nav">
        <a class="navbar-brand font-weight-bold display-1" href="@Url.Action( "Index", "Adminstration")"> <span id="s_nav">AK</span> Hotel </a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse links p-0" style="background-color:#000000 !important" id="navbarNav">
            <ul class="navbar-nav bg-dark text-center p-0 m-0" style="background-color:#000000 !important">
                <li class="nav-item active pr-3">
                    <a href='@Url.Action("Index","Roles")' class="nav-link">Roles Management</a>
                </li>
                <li class="nav-item pr-3">
                    <a href='@Url.Action("Index","ChargeCommunication")' class="nav-link">Communication Manager</a>
                </li>
                <li class="nav-item pr-3">
                    <a href='@Url.Action("Index","ReservationManager")' class="nav-link">Reservations Manager</a>
                </li>
            </ul>
            </ul>
            @Html.Partial("_LoginPartial", new PFM.Models.ApplicationUser())
        </div>
    </nav>
    <div class="body-content m-0 p-0 my-3">
        @RenderBody()
    </div>
    <section class="footer-section position-relative fixed-bottom">
        <footer class="co-footer p-5 fco-section img"
                style="background: url(../../pic/canvas.jpg) no-repeat center center/cover;">
        </footer>
    </section>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
