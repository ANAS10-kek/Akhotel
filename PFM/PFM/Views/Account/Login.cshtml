@using PFM.Models
@model LoginViewModel
@{
    ViewBag.Title = "Connexion";
}
@*<link href="~/Content/main.css" rel="stylesheet" />
<link href="~/Content/util.css" rel="stylesheet" />*@
<link href="~/Content/style-offers.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-t-50 p-b-90">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal login100-form validate-form flex-sb flex-w", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <span class="login100-form-title p-b-51">
                    Login
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="wrap-input100 validate-input m-b-16" data-validate="Username is required">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @placeholder = "Username" })
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-16" data-validate="Username is required">
                    @Html.TextBoxFor(m => m.Password, new { @class = "input100", @placeholder = "Username" })
                    <span class="focus-input100"></span>
                </div>
                <div class="flex-sb-m w-full p-t-3 p-b-24">
                    <div class="contact100-form-checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "input-checkbox100", @id = "ckb1" })
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <a href="#" class="txt1">
                            Forgot?
                        </a>
                    </div>
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>
                <p>
                    @Html.ActionLink("S'inscrire comme nouvel utilisateur", "Register")
                </p>
                <p>
                    @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ForgotPassword")
                </p>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
